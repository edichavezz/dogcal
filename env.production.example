# Production Environment Variables
# Copy this file to .env.production.local and update with production values

# Supabase Database Connection - Production
DATABASE_URL="postgresql://postgres.YOUR_PROD_PROJECT:YOUR_PASSWORD@aws-1-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Supabase Client Configuration - Production
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROD_PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_production_anon_key"

# Twilio WhatsApp Configuration - Production
TWILIO_ACCOUNT_SID=your_production_twilio_sid
TWILIO_AUTH_TOKEN=your_production_twilio_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
WHATSAPP_ENABLED=true

# Login Token Encryption Secret - Production (generate a new one!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
LOGIN_TOKEN_SECRET=GENERATE_NEW_SECRET_FOR_PRODUCTION

# Admin Panel Access Token - Production (change this!)
ADMIN_TOKEN=your-secure-production-admin-token
